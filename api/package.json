{
  "name": "numericode",
  "version": "1.0.0",
  "description": "Numericode message decoder",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "node js/index.js",
    "start:watch": "node_modules/.bin/nodemon js/index.js",
    "build": "node_modules/.bin/rimraf js/ && tsc",
    "build:watch": "tsc --watch",
    "prestart": "node_modules/.bin/rimraf js/ && yarn build"
  },
  "dependencies": {
    "bluebird": "^3.5.2",
    "express": "^4.16.3",
    "jest": "^23.6.0",
    "redis": "^2.8.0",
    "typescript": "^3.0.3"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.24",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.2",
    "@types/redis": "^2.8.6",
    "@types/typescript": "^2.0.0",
    "nodemon": "^1.18.4",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.1"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/*.test.ts"
    ]
  }
}
